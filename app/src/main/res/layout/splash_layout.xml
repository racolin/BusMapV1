<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_600">

    <ImageView
        android:id="@+id/iv_small_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_title_splash"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_bus"
        android:background="@drawable/corner_20"
        android:backgroundTint="@color/primary_800"
        app:tint="@color/secondary_900" />

    <TextView
        android:id="@+id/tv_title_splash"
        app:layout_constraintTop_toBottomOf="@id/iv_small_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_splash"
        android:textSize="32sp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/secondary_800"/>

    <TextView
        android:id="@+id/tv_group"
        app:layout_constraintTop_toBottomOf="@id/tv_title_splash"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/group_name"
        android:fontFamily="@font/quicksand_light"
        android:textColor="@color/secondary_900"/>

    <ImageView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/iv_big_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_app_name"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_bus"
        app:tint="@color/secondary_900" />

    <TextView
        android:id="@+id/tv_app_name"
        app:layout_constraintTop_toBottomOf="@id/iv_big_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_below="@id/iv_big_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/secondary_800"/>

    <ImageView
        android:id="@+id/iv_load"
        app:layout_constraintBottom_toTopOf="@id/tv_starting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_gravity="center"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_load"
        app:tint="@color/secondary_900" />

    <TextView
        android:id="@+id/tv_starting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/starting"
        android:fontFamily="@font/quicksand_light"
        android:textColor="@color/secondary_900"/>

</androidx.constraintlayout.widget.ConstraintLayout>